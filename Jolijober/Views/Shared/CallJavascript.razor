    private async Task InvokeJs(params string[] funs)
    {
        bool loop = false;
        do
        {
            loop = false;
            foreach (var fun in funs)
            {
                try
                {
                    await JsRuntime.InvokeVoidAsync(fun);
                }
                catch (Exception)
                {
                    loop = true;
                    continue;
                }
            }
        } while (loop);
    }



