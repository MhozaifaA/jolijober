@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AppTranslate Translate
@using JolijoberProject.Shared.SharedKernal.EnumClass;
@using JolijoberProject.Shared.SharedKernal.ExtensionMethod;


<AuthorizeView Roles="@(Navigation.Uri.IsContainRole(Roles.Company)?Roles.Company.ToString():Roles.User.ToString())">
    <Authorized>
            <header style="position: relative;z-index: 3;">
                <div class="container">
                    <div class="header-data">
                        <div class="logo">
                            <a href="javascript:void(0)" title=""></a>
                        </div><!--logo end-->
                        <div class="search-bar">
                            <form>
                                <input type="text" name="search" placeholder="@Translate["Search..."]">
                                <button type="button"><i class="la la-search"></i></button>
                            </form>
                        </div><!--search-bar end-->
                        <nav>
                            <ul>
                                <li class="arFlip">
                                    <a href="/Index" title="">
                                        <span><img src="template/images/icon1.png" alt=""></span>
                                       @Translate["Home"]
                                    </a>
                                </li>
                                <li class="arFlip">
                                    <a href="javascript:void(0)" title="">
                                        <span><img src="template/images/icon2.png" alt=""></span>
                                        @Translate["Companies"]
                                    </a>
                                    <ul>
                                        <li class="arAlign"><a href="/Companies" title="">@Translate["Companies"]</a></li>
                                        <li class="arAlign"><a href="/Company" title="">@Translate["Company Profile"]</a></li>
                                    </ul>
                                </li>
                                <li class="arFlip">
                                    <a href="/Projects" title="">
                                        <span><img src="template/images/icon3.png" alt=""></span>
                                        @Translate["Projects"]
                                    </a>
                                </li>
                                <li class="arFlip">
                                    <a href="javascript:void(0)" title="">
                                        <span><img src="template/images/icon4.png" alt=""></span>
                                        @Translate["Profiles"]
                                    </a>
                                    <ul>
                                        <li class="arAlign"><a href="/Profile" title="">@Translate["User Profile"]</a></li>
                                        <li class="arAlign"><a href="/MyProfile" title="">@Translate["my-profile-feed"]</a></li>
                                        <li class="arAlign"><a href="/Profiles" title="">@Translate["all-profile"]</a></li>
                                    </ul>
                                </li>
                                <li class="arFlip">
                                    <a href="/Jobs" title="">
                                        <span><img src="template/images/icon5.png" alt=""></span>
                                        @Translate["Jobs"]
                                    </a>
                                </li>
                                <li class="arFlip">
                                    <a href="javascript:void(0)" title="" class="not-box-open">
                                        <span><img src="template/images/icon6.png" alt=""></span>
                                        @Translate["Messages"]
                                    </a>
                                    <div class="notification-box msg arFlip">
                                        <div class="nt-title">
                                            <h4>@Translate["Setting"]</h4>
                                            <a href="javascript:void(0)" title="">@Translate["Clear all"]</a>
                                        </div>
                                        <div class="nott-list">

                                            <div class="notfication-details">
                                                <div class="noty-user-img">
                                                    @*<img src="template/images/resources/ny-img1.png" alt="">*@
                                                </div>
                                                <div class="notification-info arFlip">
                                                    <h3><a href="javascript:void(0)" title="">Jassica William</a> </h3>
                                                    <p class="arFlip-1 arAlign">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do.</p>
                                                    <span class="arFlip-1" style="right: auto;">2 min ago</span>
                                                </div><!--notification-info -->
                                            </div>

                                            <div class="view-all-nots">
                                                <a href="javascript:void(0)" title="">@Translate["View All Messsages"]</a>
                                            </div>
                                        </div><!--nott-list end-->
                                    </div><!--notification-box end-->
                                </li>
                                <li class="arFlip">
                                    <a href="javascript:void(0)" title="" class="not-box-open">
                                        <span><img src="template/images/icon7.png" alt=""></span>
                                        @Translate["Notification"]
                                    </a>
                                    <div class="notification-box arFlip">
                                        <div class="nt-title">
                                            <h4>@Translate["Setting"]</h4>
                                            <a href="javascript:void(0)" title="">@Translate["Clear all"]</a>
                                        </div>
                                        <div class="nott-list arFlip" >
                                            <div class="notfication-details">
                                                <div class="noty-user-img">
                                                    @*<img src="template/images/resources/ny-img1.png" alt="">*@
                                                </div>
                                                <div class="notification-info">
                                                    <h3>
                                                        <a href="javascript:void(0)" title="">Jassica William</a>
                                                        <p> @Translate["Comment on your project"]. </p>
                                                    </h3>
                                                    <span class="arFlip-1">2 min ago</span>
                                                </div><!--notification-info -->
                                            </div>
                                            <div class="view-all-nots arFlip">
                                                <a href="javascript:void(0)" title="">@Translate["View All Notification"]</a>
                                            </div>
                                        </div><!--nott-list end-->
                                    </div><!--notification-box end-->
                                </li>
                            </ul>
                        </nav><!--nav end-->
                        <div class="menu-btn">
                            <a href="javascript:void(0)" title=""><i class="fa fa-bars"></i></a>
                        </div><!--menu-btn end-->
                        <div class="user-account">
                            <div class="user-info">
                                <img src="template/images/via/30x30.png" alt="">
                                <a href="javascript:void(0)" title="">John</a>
                                <i class="la la-sort-down"></i>
                            </div>
                            <div class="user-account-settingss">
                                <h3 class="arAlign">@Translate["Online Status"]</h3>
                                <ul class="on-off-status">
                                    <li>
                                        <div class="fgt-sec">
                                            <input checked type="radio" name="cc" id="c5">
                                            <label for="c5">
                                                <span></span>
                                            </label>
                                            <small class="arFlip">@Translate["Online"]</small>
                                     </div>
                                    </li>
                                    <li>
                                        <div class="fgt-sec">
                                            <input type="radio" name="cc" id="c6">
                                            <label for="c6">
                                                <span></span>
                                            </label>
                                            <small class="arFlip">@Translate["Offline"]</small>
                                     </div>
                                    </li>
                                </ul>
                                <h3 class="arAlign">@Translate["Custom Status"]</h3>
                                <div class="search_form">
                                    <form>
                                        <input type="text" name="search">
                                        <button type="button">@Translate["Ok"]</button>
                                    </form>
                                </div><!--search_form end-->
                                <h3 class="arAlign">@Translate["Setting"]</h3>
                                <ul class="us-links">
                                    <li class="arAlign"><a href="javascript:void(0)" title="">@Translate["Account Setting"]</a></li>
                                    <li class="arAlign"><a href="javascript:void(0)" title="">@Translate["Privacy"]</a></li>
                                    <li class="arAlign"><a href="javascript:void(0)" title="">@Translate["Faqs"]</a></li>
                                    <li class="arAlign"><a href="javascript:void(0)" title="">@Translate["Terms & Conditions"]</a></li>
                                </ul>
                                <h3 class="tc"><a href="/Account/Logout" title="">@Translate["Logout"]</a></h3>
                            </div><!--user-account-settingss end-->
                        </div>
                    </div><!--header-data end-->
                </div>
            </header><!--header end-->
            @Body
        </Authorized>
    <NotAuthorized>
        <RedirectToLogin IsAuth="true" UrlReferrer="@Navigation.Uri.RemoveHostUri(true)" />
    </NotAuthorized>
</AuthorizeView>



